<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3"><i class="fas fa-gamepad"></i> ajouter des jeux</h1>
      {{> messages}}
      <form action="/admin/addgames" enctype="multipart/form-data" method="POST">
        <div class="form-group">
          <label for="name">name</label>
          <input
            type="name"
            id="name"
            name="name"
            class="form-control"
            placeholder="Entrer le nom du jeu"
          />
        </div>
        <div class="form-group">
          <label for="type">type de jeux</label>
          <input
            type="type"
            id="type"
            name="type"
            class="form-control"
            placeholder="Entrer le type du jeux"
          />
        </div>
        <div class="form-group">
          <label for="jacket">jacket</label>
          <input type="file" name="jacket" class="form-control-file" id="jacket">
        </div>
        <button type="submit" class="btn btn-primary btn-block">add a game</button>
      </form>
      <p class="lead mt-4">
        <a href="/dashboard/catalog">Aller voir dans le catalog</a>
      </p>
    </div>
  </div>
</div>